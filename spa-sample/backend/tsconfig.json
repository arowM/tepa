{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "es2022",
    "lib": [
      "es2018"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "alwaysStrict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/**/*"
  ]
}
