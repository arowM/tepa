{
    "private": true,
    "scripts": {
        "format": "elm-format src tests",
        "start": "npm-run-all -p start:frontend start:backend",
        "start:scenario": "parcel serve src/scenario.html -p 8009",
        "start:frontend": "parcel serve src/index.html --public-url /tepa -p 8010 --hmr-port 8020",
        "start:backend": "cd backend && npm start",
        "start:doc": "elm-doc-preview --port=8111",
        "review": "elm-review --fix",
        "build": "rimraf dist/ && parcel build src/scenario.html src/index.html --no-source-maps --dist-dir dist/ --public-url /tepa",
        "build:scenario": "npm run build:scenario-worker && node ./cli/scenario-markdown.js",
        "build:scenario-worker": "elm make src/ScenarioWorker.elm --output=./dist/scenario-worker.js",
        "test": "elm-verify-examples -r && test ! -d ./tests/VerifyExamples && elm-test && elm-review && elm-format --validate src && elm make src/App.elm --output=/dev/null"
    },
    "devDependencies": {
        "@elm-tooling/elm-language-server": "^2.6.0",
        "@parcel/transformer-elm": "^2.8.0",
        "@parcel/transformer-sass": "^2.8.0",
        "elm-doc-preview": "^5.0.3",
        "elm-format": "^0.8.3",
        "elm-review": "^2.6.1",
        "elm-verify-examples": "^5.2.0",
        "rimraf": "^2.7.1"
    },
    "dependencies": {
        "elm": "^0.19.1-5",
        "elm-test": "^0.19.1-revision9",
        "highlight.js": "^11.8.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.8.0"
    }
}
